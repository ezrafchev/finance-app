name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  check-pages-enabled:
    runs-on: ubuntu-latest
    outputs:
      pages-enabled: ${{ steps.check-pages.outputs.pages-enabled }}
    steps:
      - name: Check GitHub Pages Configuration
        id: check-pages
        uses: actions/github-script@v7
        with:
          script: |
            const owner = context.repo.owner;
            const repo = context.repo.repo;
            let pages;
            const logManualSetup = () => {
              console.log('\nüìñ To enable:');
              console.log('1. Go to: https://github.com/' + owner + '/' + repo + '/settings/pages');
              console.log('2. Source: GitHub Actions');
              console.log('3. See GITHUB_PAGES_SETUP.md for instructions');
            };
            const getBuildType = () => pages?.data?.build_type || pages?.data?.source?.type;

            try {
              pages = await github.rest.repos.getPages({ owner, repo });
            } catch (error) {
              if (error.status === 404) {
                console.log('‚ÑπÔ∏è GitHub Pages is not enabled. Attempting to enable via API...');
                try {
                  await github.rest.repos.createPagesSite({
                    owner,
                    repo,
                    build_type: 'workflow'
                  });
                  pages = await github.rest.repos.getPages({ owner, repo });
                } catch (createError) {
                  if (createError.status === 403) {
                    core.setOutput('pages-enabled', 'false');
                    core.warning('‚ö†Ô∏è GitHub Pages could not be auto-enabled with the workflow token. Manual setup is required.');
                    logManualSetup();
                    return;
                  }
                  core.setFailed('‚ùå GitHub Pages is NOT enabled and automatic setup failed: ' + createError.message);
                  logManualSetup();
                  return;
                }
              } else {
                throw error;
              }
            }

            console.log('‚úÖ GitHub Pages is enabled');
            let buildType = getBuildType();

            if (buildType !== 'workflow') {
              console.log('‚ÑπÔ∏è GitHub Pages is set to legacy builds. Switching to GitHub Actions...');
              try {
                await github.request('PUT /repos/{owner}/{repo}/pages', {
                  owner,
                  repo,
                  build_type: 'workflow'
                });
                pages = await github.rest.repos.getPages({ owner, repo });
                buildType = getBuildType();
              } catch (updateError) {
                if (updateError.status === 403) {
                  core.setOutput('pages-enabled', 'false');
                  core.warning('‚ö†Ô∏è GitHub Pages could not be updated to GitHub Actions with the workflow token. Manual setup is required.');
                  logManualSetup();
                  return;
                }
                core.setFailed('‚ùå GitHub Pages is NOT set to GitHub Actions and automatic setup failed: ' + updateError.message);
                logManualSetup();
                return;
              }
            }

            const pagesEnabled = buildType === 'workflow';
            core.setOutput('pages-enabled', String(pagesEnabled));
            console.log(`üìç Build type: ${buildType}`);

            if (!pagesEnabled) {
              core.setFailed('‚ö†Ô∏è GitHub Pages source must be set to "GitHub Actions"');
              console.log('\nüìñ Fix: Go to Settings ‚Üí Pages ‚Üí Source: GitHub Actions');
              console.log('üîó https://github.com/' + owner + '/' + repo + '/settings/pages');
            }
  
  build:
    runs-on: ubuntu-latest
    needs: check-pages-enabled
    if: needs.check-pages-enabled.outputs.pages-enabled == 'true'
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: "20"
          cache: "npm"

      - name: Install dependencies
        run: npm ci --legacy-peer-deps

      - name: Build
        run: npm run build
        env:
          NODE_ENV: production

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: ./out

  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    needs: [build, check-pages-enabled]
    if: needs.check-pages-enabled.outputs.pages-enabled == 'true'
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
